# Server Configuration
NODE_ENV=development
PORT=3001

# Engine Connection
ENGINE_HOST=localhost
ENGINE_PORT=6379
ENGINE_TYPE=redis # redis or tcp

# Router Connection
ROUTER_URL=http://localhost:8080
ROUTER_TIMEOUT=30000

# WebSocket Configuration
WS_CORS_ORIGIN=http://localhost:3000
WS_NAMESPACE=/trading

# Redis Configuration (if using Redis for engine connection)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json