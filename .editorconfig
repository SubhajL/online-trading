# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# 4 space indentation for most files
[*]
indent_style = space
indent_size = 4

# 2 space indentation for web technologies
[*.{js,jsx,ts,tsx,json,jsonc,yaml,yml,html,css,scss,sass,less,xml,svg}]
indent_size = 2

# Python files
[*.py]
indent_size = 4
max_line_length = 88

# Go files (use tabs as per Go convention)
[*.go]
indent_style = tab
indent_size = 4

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# Configuration files
[*.{toml,ini,cfg}]
indent_size = 4

# Docker files
[{Dockerfile,*.dockerfile}]
indent_size = 4

# Shell scripts
[*.{sh,bash,zsh}]
indent_size = 2

# Makefile (must use tabs)
[{Makefile,*.mk}]
indent_style = tab

# Package.json and similar files
[package.json]
indent_size = 2

# YAML files (commonly 2 spaces)
[*.{yml,yaml}]
indent_size = 2

# SQL files
[*.sql]
indent_size = 2

# Environment files
[.env*]
indent_size = 2